<p id="notice"><%= notice %></p>

<div class="container-fluid anchor">
  <div class="new">
    <h1>The makers</h1>
  </div>
  
  <div class="row" id="productos">
    <% @makers.each do |maker| %>
      <div class="col-md-4">
      <h1><%= link_to maker.title, maker %></h1>
      <p><%= maker.description %></p>
      <p><%= link_to maker.user.first_name, user_path(maker.user) %></p>
      <p><%= link_to maker.user.first_name, maker %></p>
      <p><%= link_to(image_tag(maker.image_url, height:'500',width:'400', class: "img-responsive"), maker) %></p>
      <p><%= link_to 'Show', maker %></p>
      <p><%= link_to 'Edit', edit_maker_path(maker) %></p>
      <p><%= link_to 'Destroy', maker, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div><!-- /col -->
    <% end %> 
  </div>
</div>

<h1>Makers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @makers.each do |maker| %>
      <tr>
        <td><%= maker.title %></td>
        <td><%= maker.description %></td>
        <td><%= maker.image_url %></td>
        <td><%= maker.user.first_name %></td>
        <td><%= link_to 'Show', maker %></td>
        <td><%= link_to 'Edit', edit_maker_path(maker) %></td>
        <td><%= link_to 'Destroy', maker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

